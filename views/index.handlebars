{{!-- post for with bootstrap --}}
<div class="container mt-9">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    {{!-- card title on left add meber btn right --}}
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="card-title center">{{title}}</h3>
                        </div>
                    </div>

                </div>
                <div class="card-body">
                    <ul class="list-group">

                        {{!-- table bootsrap with action btn --}}
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>SN</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each members}}
                                <tr>
                                    <td>{{@index}}</td>
                                    <td>{{name}}</td>
                                    <td>{{email}}</td>
                                    <td>{{status}}</td>
                                    <td>
                                        <a href="/members/{{id}}" class="btn btn-primary">View</a>
                                        <a href="/members/{{id}}/edit" class="btn btn-warning">Edit</a>
                                        <a href="/members/{{id}}/delete" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>

                        </table>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    {{!-- form inside card  --}}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                {{!-- ceneter card --}}
                <div class="card-header text-center mt-5">
                    <h3 class="card-title">Add Member</h3>
                </div>

                <div class="card-body">
                    <form action="/api/members" method="POST">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" class="form-control" id="email" name="email" value="{{email}}">
                        </div>
                        {{!-- status seelect option --}}
                        <div class="form-group">
                            <label for="status">Status</label>
                            <select class="form-control" id="status" name="status">
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        <button type="submit" class="btn btn-primary btn-block mt-5">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{{!-- end of post for with bootstrap --}}